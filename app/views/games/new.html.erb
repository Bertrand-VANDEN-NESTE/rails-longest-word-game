<div class="container">
  <h1>New games</h1>
  <ul class="list-style-none d-flex">
    <% @letters.each do |letter| %>
      <li class="m-2 ps-3 pe-3 pt-2 shadow pb-2 fw-bold bg-primary text-light"><%= letter %></li>
    <% end %>
  </ul>
  <form action="/score" method="POST" data-turbo="false">
    <div class="mb-3">
    <label for="" class="form-label">What is the longest word you can find ?</label>
      <div class="input-group mb-3">
        <input type="text" name="games" class="form-control">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="submit" value="Play" class="btn btn-primary">
      </div>
    </div>
  </form>
</div>
